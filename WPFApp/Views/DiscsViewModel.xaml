<UserControl x:Class="WPFApp.Views.DiscsViewModel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFApp.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="White">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <TextBlock Text="Discs" Grid.Row="0" VerticalAlignment="Center" FontSize="24" />
        <ListView x:Name="LVDiscs" Grid.Row="1" />
        <TextBlock Text="Your Bag" Grid.Row="0" Grid.Column="1" VerticalAlignment="Center" FontSize="24"/>
        <ListView x:Name="LVBag" Grid.Row="1" Grid.Column="1" />
    </Grid>
</UserControl>
